import 'base'
import 'store'
import 'customer'

model CustomerGroup extends BaseModel {
  name          String     @db.VarChar(255)
  discountValue Float?     @db.DoublePrecision @default(0)
  discountType  String?    @db.VarChar(10) @default("VALUE")
  storeCode     String     @db.VarChar(50)

  // Relations
  store         Store?     @relation(fields: [storeCode], references: [code], onDelete: SetNull)
  customers     Customer[]

  @@map("customer_groups")
}
